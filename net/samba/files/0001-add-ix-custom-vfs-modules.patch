+static int
+existing_parent_name(const char *path,
+		     char *buf,
+		     size_t buflen,
+		     int *nslashes)
+{
+	char *slashp = NULL;
+	*nslashes = 0;
+	strlcpy(buf, path, buflen);
+	for (;;) {
+		slashp = strrchr(buf, '/');
+		if (slashp == NULL) {
+			return -1;
+		}
+		*nslashes += 1;
+		*slashp = '\0';
+		if (access(buf, F_OK) == 0) {
+			break;
+		}
+	}
+	return 0;
+}
